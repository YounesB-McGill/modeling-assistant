<?xml version="1.0" encoding="UTF-8"?>
<project default="generate" name="modelingassistant.dsl.transformation">
    <property name="ECLIPSE_HOME" value="../../../../eclipse-modeling-tools/eclipse"/>
    <property name="ECLIPSE_WORKSPACE" value="../../../../eclipse-modeling-ws"/>

    <!-- The classpath with only the dependencies used by the project -->
    <path id="modelingassistant.dsl.transformation.libraryclasspath">
        <pathelement location="${ECLIPSE_WORKSPACE}/modelingassistant.dsl.transformation/bin"/>
    </path>

    <path id="modelingassistant.dsl.transformation.classpath">
        <path refid="modelingassistant.dsl.transformation.libraryclasspath"/>
    </path>

    <!-- The classpath with only the jars available in the plugin folder of Eclipse -->
    <path id="modelingassistant.dsl.transformation.libraryclasspath.alljars">
        <pathelement location="../modelingassistant.dsl.transformation/bin"/>
        <fileset dir="${ECLIPSE_HOME}/plugins/" includes="*.jar"/>
    </path>

    <path id="modelingassistant.dsl.transformation.classpath.alljars">
        <path refid="modelingassistant.dsl.transformation.libraryclasspath.alljars"/>
    </path>

    <!-- The default task with the jars used by this project -->
    <target name="generate">
        <java classname="org.eclipse.acceleo.module.sample.main.Generate" classpathref="modelingassistant.dsl.transformation.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>

    <!--
        In case of problem you can also try with all the jar available in your Eclipse
        Keep in mind that having two versions of the same jar can create problems
    -->
    <target name="generate.alljars">
        <java classname="org.eclipse.acceleo.module.sample.main.Generate" classpathref="modelingassistant.dsl.transformation.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>
</project>
